#:kivy 1.0.9
# ref: https://kivy.org/docs/tutorials/pong.html

<Car>:
    size: 20, 10
    origin: 10, 5
    canvas:
        PushMatrix
        Rotate:
            angle: self.angle
            origin: self.center
        Rectangle:
            pos: self.pos
            size: self.size
            source: "./images/car.png"
        PopMatrix


			
<Goal>:
    size: 20, 20
    canvas:
        Color:
            rgba: 1, 0, 0, 1
        Ellipse:
            pos: self.pos
            size: self.size

<Game>:
    car: game_car
    goal: game_goal 
    canvas:
        Rectangle:
            pos: self.pos
            size: 1429, 660
            source: "./images/citymap.png"

    Car:
        id: game_car
        center: self.parent.center
    Goal:
        id: game_goal
        center: 1080, 425
